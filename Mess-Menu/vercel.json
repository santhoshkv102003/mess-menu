{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server/index.js"
        },
        {
            "src": "/",
            "dest": "/client/index.html"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client/assets/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/client/images/$1"
        },
        {
            "src": "/(.*).(css|js|ico|png|svg|jpg)",
            "dest": "/client/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}